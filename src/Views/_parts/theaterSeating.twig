<div class="seating-wrapper" id="{{ id }}" data-reserved="{{ reservedSeats }}">
    <div class="seating-overflow">
        <table>
            <colgroup class="seating-table-colgroup"></colgroup>
            <thead id="seating-table-thead">
                <tr>
                    <td class="seating-table-projector">
                        <div class="projector"><span>PROJEKTOR</span></div>
                    </td>
                </tr>
            </thead>
            <tbody class="seating-table-tbody"></tbody>
        </table>
    </div>
    <div class="seating-legend">
        {% for type in seatTypes %}
        <div
            class="item {{ type.name }}"
            data-pricing="{{ type.price_adult }},{{ type.price_adult_weekend }},{{ type.price_child }},{{ type.price_child_weekend }}"
        >
            <i class="fa-solid fa-couch"></i>
            <span>{{ type.name }}</span>
        </div>
        {% endfor %}
    </div>
</div>
